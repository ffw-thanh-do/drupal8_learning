<span{{ attributes }}>
  {% for item in items %}
    {% include "@atoms/01-links/link/link.twig" with {
      "link_base_class": "colored-link",
      "link_modifiers": ["blue"],
      "link_attributes": {"target": "_blank"},
      "link_url": file_url(item.content['#file'].getFileUri()),
      "link_content": item.label|default("Download PDF"|t)
    } %}
  {% endfor %}
</span>